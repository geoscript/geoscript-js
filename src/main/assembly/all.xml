<?xml version="1.0"?>
<assembly>
    <id>dist</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>README*</include>
                <include>license*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <fileMode>0755</fileMode>
            <excludes>
                <exclude>geoscript-js-dev</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/org/geoscript/js/lib</directory>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/jars</directory>
            <outputDirectory>/jars</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
